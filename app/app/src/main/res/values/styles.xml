<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SelectionButton" parent="Widget.Material3.Button.Icon">
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/khula</item>
        <item name="android:textColor">#FF404040</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="iconPadding">-10dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/dark_text</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="UniversitySelectionText" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/khula</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ContentCardPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:backgroundTint">#FFC2C2C2</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>